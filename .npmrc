# Enforce the Node.js version defined in the "engines" field of package.json
engine-strict=true

# Disable package-lock.json generation (pnpm uses pnpm-lock.yaml)
package-lock=false

# Always save exact versions for reproducible builds
save-exact=true

# Use hoisted node_modules for better performance
node-linker=hoisted

# Enable shameful hoisting for Electron compatibility
shamefully-hoist=false
