# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# http://editorconfig.org

root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

# JavaScript, TypeScript, JSX, TSX
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 80

# JSON files
[*.json]
indent_size = 2

# CSS, SCSS, LESS
[*.{css,scss,less}]
indent_size = 2

# HTML files
[*.{html,htm}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Package.json and other config files
[package.json]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Batch files
[*.bat]
end_of_line = crlf
